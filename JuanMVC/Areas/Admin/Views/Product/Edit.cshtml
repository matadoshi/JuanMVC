@model ProductPostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Product.Name" class="control-label"></label>
                <input asp-for="@Model.Product.Name" class="form-control" />
                <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Price" class="control-label"></label>
                <input asp-for="@Model.Product.Price" class="form-control" />
                <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.DiscountPrice" class="control-label"></label>
                <input asp-for="@Model.Product.DiscountPrice" class="form-control" />
                <span asp-validation-for="@Model.Product.DiscountPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Count" class="control-label"></label>
                <input asp-for="@Model.Product.Count" class="form-control" />
                <span asp-validation-for="@Model.Product.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.IsAvailability" class="control-label"></label>
                <input asp-for="@Model.Product.IsAvailability" class="form-control" />
                <span asp-validation-for="@Model.Product.IsAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Product.CategoryId">Categories</label>
                <select class="form-control" asp-for="@Model.Product.CategoryId" asp-items="new SelectList(Model.Categories,nameof(ProductCategory.Id),nameof(ProductCategory.Name))">
                    <option>Select Category</option>
                </select>
                <span class="text text-danger" asp-validation-for="@Model.Product.CategoryId"></span>
            </div>
            <div class="form-group">
                <label for="BrandId">Brands</label>
                <select class="form-control" asp-for="@Model.Product.BrandId" asp-items="new SelectList(Model.Brands,nameof(Brand.Id),nameof(Brand.Name))">
                    <option>Select Brand</option>
                </select>
                <span class="text text-danger" asp-validation-for="@Model.Product.BrandId"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Description" class="control-label"></label>
                <input asp-for="@Model.Product.Description" class="form-control" />
                <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.MainFile" class="control-label"></label>
                <input asp-for="@Model.Product.MainFile" class="form-control" />
                <span asp-validation-for="@Model.Product.MainFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.SecondFile" class="control-label"></label>
                <input asp-for="@Model.Product.SecondFile" class="form-control" />
                <span asp-validation-for="@Model.Product.SecondFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

