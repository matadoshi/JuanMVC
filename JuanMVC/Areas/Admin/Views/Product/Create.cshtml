@model ProductPostViewModel

@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.DiscountPrice" class="control-label"></label>
                <input asp-for="Product.DiscountPrice" class="form-control" />
                <span asp-validation-for="Product.DiscountPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Count" class="control-label"></label>
                <input asp-for="Product.Count" class="form-control" />
                <span asp-validation-for="Product.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.IsAvailability" class="control-label"></label>
                <input asp-for="Product.IsAvailability" class="form-control" />
                <span asp-validation-for="Product.IsAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Product.CategoryId">Categories</label>
                <select class="form-control" asp-for="Product.CategoryId" asp-items="new SelectList(Model.Categories,nameof(ProductCategory.Id),nameof(ProductCategory.Name))">
                    <option>Select Category</option>
                </select>
                <span class="text text-danger" asp-validation-for="Product.CategoryId"></span>
            </div>
            <div class="form-group">
                <label for="BrandId">Brands</label>
                <select class="form-control" asp-for="Product.BrandId" asp-items="new SelectList(Model.Brands,nameof(Brand.Id),nameof(Brand.Name))">
                    <option>Select Brand</option>
                </select>
                <span class="text text-danger" asp-validation-for="Product.BrandId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MainImage" class="control-label"></label>
                <input asp-for="Product.MainImage" class="form-control" />
                <span asp-validation-for="Product.MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SecondImage" class="control-label"></label>
                <input asp-for="Product.SecondImage" class="form-control" />
                <span asp-validation-for="Product.SecondImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Script{
    <partial name="_ValidationPartial">
}

