@model Order
<form asp-controller="Order" asp-action="Checkout">
    <div class="row">
        <div class="col-md-6">
            <div class="single-input-item">
                <label asp-for="Name" class="required">First Name</label>
                <input asp-for="Name" id="f_name" placeholder="First Name" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="single-input-item">
                <label asp-for="Surname" class="required">Last Name</label>
                <input asp-for="Surname" id="l_name" placeholder="Last Name" />
            </div>
        </div>
    </div>

    <div class="single-input-item">
        <label asp-for="Email" class="required">Email Address</label>
        <input asp-for="Email" id="email" placeholder="Email Address" />
    </div>

    <div class="single-input-item">
        <label for="com-name">Company Name</label>
        <input type="text" id="com-name" placeholder="Company Name" />
    </div>

    <div class="single-input-item">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" id="l_name" placeholder="Country" />
    </div>

    <div class="single-input-item">
        <label asp-for="City" class="required">Town / City</label>
        <input asp-for="City" id="town" placeholder="Town / City" required />
    </div>

    <div class="single-input-item">
        <label asp-for="Address" class="required mt-20">Street address</label>
        <input asp-for="Address" id="street-address" placeholder="Street address Line 1" />
    </div>


    <div class="single-input-item">
        <label asp-for="ZipCode" class="required">Postcode / ZIP</label>
        <input asp-for="ZipCode" id="postcode" placeholder="Postcode / ZIP"/>
    </div>

    <div class="single-input-item">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" id="phone" placeholder="Phone" />
    </div>

</form>