@model ProfileVM
<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
<div class="myaccount-content">
    <h3>Account Details</h3>
    <div class="account-details-form">
        <form action="#">
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="Name" class="required">First Name</label>
                        <input asp-for="Name" id="first-name" placeholder="First Name" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="Surname" class="required">Last Name</label>
                        <input asp-for="Surname" id="last-name" placeholder="Last Name" />
                    </div>
                </div>
            </div>
            <div class="single-input-item">
                <label asp-for="Username" class="required">Display Name</label>
                <input asp-for="Username" id="display-name" placeholder="Display Name" />
            </div>
            <div class="single-input-item">
                <label asp-for="Email" class="required">Email Addres</label>
                <input asp-for="Email" id="email" placeholder="Email Address" />
            </div>
            <fieldset>
                <legend>Password change</legend>
                <div class="single-input-item">
                    <label asp-for="CurrentPassword" class="required">Current Password</label>
                    <input asp-for="CurrentPassword" id="current-pwd" placeholder="Current Password" />
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <label asp-for="NewPassword" class="required">New Password</label>
                            <input asp-for="NewPassword" id="new-pwd" placeholder="New Password" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <label asp-for="ConfirmPassword" class="required">Confirm Password</label>
                            <input asp-for="ConfirmPassword" id="confirm-pwd" placeholder="Confirm Password" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="single-input-item">
                <button class="check-btn sqr-btn ">Save Changes</button>
            </div>
        </form>
    </div>
</div>