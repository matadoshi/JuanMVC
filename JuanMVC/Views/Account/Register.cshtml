@model RegisterVM

@{
    ViewData["Title"] = "Register";
}
<!-- Register Content Start -->
<div class="col-lg-6">
    <div class="login-reg-form-wrap signup-form">
        <h2>Register</h2>
        <div class=" text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="single-input-item">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" placeholder="Enter your name" />
                <span class="text text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="single-input-item">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" placeholder="Enter your surname" />
                <span class="text text-danger" asp-validation-for="Surname"></span>
            </div>
            <div class="single-input-item">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" placeholder="Enter your username" />
                <span class="text text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="single-input-item">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" placeholder="Enter your username" />
                <span class="text text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" placeholder="Enter your Password" />
                        <span class="text text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your Password" />
                        <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
            </div>
            <div class="single-input-item">
                <button type="submit" class="btn">Register</button>
            </div>
        </form>
    </div>
</div>
<!-- Register Content End -->
