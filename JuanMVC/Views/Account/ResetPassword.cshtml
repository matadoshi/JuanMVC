@model ResetPasswordVM

@{ ViewData["Title"] = "Reset Password"; }

            <div class="col-lg-8 m-auto text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Login</h2>
                        </div>
                        <div class="login-form m-auto">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <form class="pt-3 col-lg-6 m-auto" method="post" asp-action="ResetPassword">
                                <div class="single-input-item">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Enter Password" />
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="single-input-item">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Repeat enter password" />
                                    <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn">Reset Password</button>
                                </div>
                                <input type="hidden" asp-for="Token" name="token" value="@Model.Token" />
                                <input type="hidden" asp-for="Email" name="email" value="@Model.Email" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
